<div class="post">
  
  <header class="hero">
    <h1 class="app-title"><a href="/dashboard">Your Dashboard</a></h1>
  </header>

  <section>
    <h2>Your Dashboard</h2>
      {{#each posts as |post|}}
        {{> dashboard-postinfo post}}
      {{/each}}
  </section>

  <footer class="footer flex-row justify-center">
    <button type="submit" class="btn"><a class="link" href="/dashboard/new"> + New Post </a></button>
  </footer>
  
  <script src="/js/add-post.js"></script>

</div>
